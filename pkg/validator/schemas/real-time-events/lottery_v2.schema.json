{
  "$id": "https://www.fasttrack-solutions.com/en/resources/integration/real-time-data/lottery-and-scratch",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Lottery Event (LOTTERY_V2)",
  "type": "object",
  "required": [
    "amount",
    "currency",
    "exchange_rate",
    "lines",
    "origin",
    "timestamp",
    "type",
    "user_id"
  ],
  "properties": {
    "amount": {
      "type": "number"
    },
    "bonus_code": {
      "type": "string"
    },
    "currency": {
      "type": "string",
      "pattern": "^[A-Z]{3}$"
    },
    "discount_amount": {
      "type": "number"
    },
    "draw_date": {
      "type": "string"
    },
    "draw_id": {
      "type": "string"
    },
    "draw_special_numbers": {
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "exchange_rate": {
      "type": "number"
    },
    "lines": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "line_id": {
            "type": "number"
          },
          "is_free_bet": {
            "type": "boolean"
          },
          "is_quick_pick": {
            "type": "boolean"
          },
          "is_winning_line": {
            "type": "boolean"
          },
          "meta": {
            "type": "object"
          },
          "matched_numbers": {
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "numbers": {
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "special_numbers": {
            "type": "array",
            "items": {
              "type": "number"
            }
          }
        },
        "required": [
          "line_id"
        ]
      }
    },
    "lottery_id": {
      "type": "string"
    },
    "lottery_name": {
      "type": "string"
    },
    "lottery_type": {
      "type": "string"
    },
    "meta": {
      "type": "object"
    },
    "origin": {
      "type": "string"
    },
    "ticket_id": {
      "type": "string"
    },
    "timestamp": {
      "format": "date-time",
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "Bet",
        "Settlement"
      ]
    },
    "user_id": {
      "type": "string"
    }
  }
}