{
  "$id": "https://www.fasttrack-solutions.com/en/resources/integration/real-time-data/bet-placement",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sports Event (SPORTSBOOK)",
  "type": "object",
  "properties": {
    "activity_id": {
      "type": "string"
    },
    "activity_id_reference": {
      "type": "string"
    },
    "amount": {
      "type": "number",
      "minimum": 0
    },
    "balance_after": {
      "type": "number"
    },
    "balance_before": {
      "type": "number"
    },
    "bet_type": {
      "type": "string",
      "enum": [
        "Single",
        "Multi",
        "System",
        "Teaser"
      ]
    },
    "bets": {
      "items": {
        "properties": {
          "event_name": {
            "type": "string"
          },
          "is_free_bet": {
            "type": "boolean"
          },
          "is_live": {
            "type": "boolean"
          },
          "is_risk_free_bet": {
            "type": "boolean"
          },
          "market": {
            "type": "string"
          },
          "match_start": {
            "format": "date-time",
            "type": "string"
          },
          "meta": {
            "type": [
              "object",
              "null"
            ]
          },
          "odds": {
            "type": "number"
          },
          "outcomes": {
            "items": {
              "properties": {
                "criterion_name": {
                  "type": "string"
                },
                "meta": {
                  "type": [
                    "object",
                    "null"
                  ]
                },
                "outcome_label": {
                  "type": "string"
                }
              },
              "required": [
                "criterion_name",
                "outcome_label"
              ],
              "type": "object"
            },
            "type": "array"
          },
          "sports_name": {
            "type": "string"
          },
          "tournament_name": {
            "type": "string"
          }
        },
        "required": [
          "event_name",
          "match_start",
          "odds"
        ],
        "type": "object"
      },
      "type": "array"
    },
    "bonus_wager_amount": {
      "type": "number"
    },
    "currency": {
      "type": "string",
      "pattern": "^[A-Z]{3}$"
    },
    "device_type": {
      "type": "string"
    },
    "exchange_rate": {
      "type": "number",
      "minimum": 0
    },
    "is_cashout": {
      "type": "boolean"
    },
    "locked_wager_amount": {
      "type": "number"
    },
    "meta": {
      "type": [
        "object",
        "null"
      ]
    },
    "odds": {
      "type": "number"
    },
    "origin": {
      "type": "string"
    },
    "reference_bet_amount": {
      "type": "number"
    },
    "reference_bet_real_amount": {
      "type": "number"
    },
    "reference_bet_bonus_amount": {
      "type": "number"
    },
    "reference_bet_locked_amount": {
      "type": "number"
    },
    "reference_bet_exchange_rate": {
      "type": "number"
    },
    "settlement_type": {
      "type": "string"
    },
    "skip_publishing": {
      "description": "Skip publishing the event",
      "type": "boolean"
    },
    "sportsbook_vendor_name": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "Approved",
        "Rollback"
      ]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "type": {
      "enum": [
        "Bet",
        "Settlement"
      ],
      "type": "string"
    },
    "user_id": {
      "type": "string",
      "minLength": 1
    },
    "wager_amount": {
      "type": "number"
    }
  },
  "required": [
    "amount",
    "bet_type",
    "bets",
    "currency",
    "exchange_rate",
    "odds",
    "origin",
    "status",
    "timestamp",
    "user_id"
  ]
}