{
    "$id": "https://www.fasttrack-solutions.com/en/resources/integration/real-time-data",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Poker Tournament Buy In Event (POKER_TOURNAMENT_BUY_IN_V2)",
    "type": "object",
    "properties": {
      "user_id": {
        "type": "string",
        "minLength": 1
      },
      "timestamp": {
        "type": "string",
        "format": "date-time"
      },
      "status": {
        "type": "string",
        "enum": [
          "Approved",
          "Rollback"
        ]
      },
      "currency": {
        "description": "Currency code, e.g., 'USD'",
        "type": "string"
      },
      "exchange_rate": {
        "type": "number",
        "minimum": 0
      }
    },
    "required": [
      "currency",
      "exchange_rate",
      "status",
      "timestamp",
      "user_id"
    ]
}