{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Lottery Subscription Event (LOTTERY_V2)",
  "type": "object",
  "required": [],
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "transaction_id": {
      "type": "string"
    },
    "user_id": {
      "type": "string"
    },
    "amount": {
      "type": "number"
    },
    "account_amount": {
      "type": "number"
    },
    "bonus_amount": {
      "type": "number"
    },
    "bonus_code": {
      "type": "string"
    },
    "currency": {
      "type": "string"
    },
    "deposit_amount": {
      "type": "number"
    },
    "exchange_rate": {
      "type": "number"
    },
    "origin": {
      "type": "string"
    },
    "status": {
      "type": "string"
    },
    "tickets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "ticket_id",
          "product",
          "product_name",
          "amount",
          "lines_count",
          "draws"
        ],
        "properties": {
          "ticket_id": {
            "type": "string"
          },
          "product": {
            "type": "string"
          },
          "product_name": {
            "type": "string"
          },
          "amount": {
            "type": "number"
          },
          "lines_count": {
            "type": "integer"
          },
          "draws": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "timestamp"
              ],
              "properties": {
                "timestamp": {
                  "type": "string",
                  "format": "date-time"
                }
              }
            }
          }
        }
      }
    }
  }
}